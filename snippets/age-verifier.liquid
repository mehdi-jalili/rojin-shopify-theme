{% if request.cookies.age_verified != 'true' %}
  {{ 'age-verifier.css' | asset_url | stylesheet_tag }}
  {{ 'age-verifier.js' | asset_url | script_tag }}

  <div id="age-verification-overlay" style="display: none;">
    <div id="age-verification-popup">
      <h3>{{ title | default: 'Age verification' }}</h3>
      <p>{{ message | default: 'You must be 18 years or older to enter this website' }}</p>
      <button id="age-confirm">
        {{ confirm_text | default: 'Yes, I am 18 or older' }}
      </button>
      <button id="age-deny">
        {{ deny_text | default: 'No, I am under 18' }}
      </button>
    </div>
  </div>
{% endif %}