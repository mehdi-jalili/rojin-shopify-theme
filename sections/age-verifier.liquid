
<div id="age-verification-overlay" style="display: flex;">
  <div id="age-verification-popup">
    <h3>{{ settings.age_verifier_title }}</h3>
    <p>{{ settings.age_verifier_message }}</p>
    <button id="age-confirm">
      {{ settings.age_verifier_confirm_text }}
    </button>
    <button id="age-deny">
      {{ settings.age_verifier_deny_text }}
    </button>
  </div>
</div>

<style>

    #age-verification-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.8);
    z-index: 9999;
    display: none;
    justify-content: center;
    align-items: center;
    }

    #age-verification-popup {
    background: white;
    padding: 30px;
    border-radius: 10px;
    text-align: center;
    max-width: 400px;
    margin: 20px;
    }

    #age-verification-popup button {
    margin: 10px;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    }

    #age-confirm {
    background: #007bff;
    color: white;
    }

    #age-deny {
    background: #6c757d;
    color: white;
    }

</style>


{% schema %}
{
  "name": "Age Verifier",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Popup title",
      "default": "Age verification"
    },
    {
      "type": "textarea",
      "id": "message", 
      "label": "Popup message",
      "default": "You must be 18 years or older to enter this website"
    },
    {
      "type": "text",
      "id": "confirm_text",
      "label": "Confirm button text",
      "default": "Yes, I am 18 or older"
    },
    {
      "type": "text",
      "id": "deny_text",
      "label": "Deny button text", 
      "default": "No, I am under 18"
    }
  ]
}
{% endschema %}